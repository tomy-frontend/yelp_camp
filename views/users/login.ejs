<% layout('layouts/boilerplate') -%>
<h1>ログイン</h1>
<form action="/login" method="post" class="validated-form" novalidate>
  <div class="mb-3">
    <label class="form-label" for="username">ユーザーネーム</label>
    <input
      class="form-control"
      type="text"
      id="username"
      name="username"
      required
    />
    <div class="valid-feedback">OK!</div>
  </div>

  <div class="mb-3">
    <label class="form-label" for="password">パスワード</label>
    <input
      class="form-control"
      type="password"
      id="password"
      name="password"
      required
    />
    <div class="valid-feedback">OK!</div>
  </div>
  <button class="btn btn-success">ログイン</button>
</form>
