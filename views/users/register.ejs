<% layout('layouts/boilerplate') -%>
<h1>ユーザー登録</h1>
<form action="/register" method="post" class="validated-form" novalidate>
  <div class="mb-3">
    <label class="form-label" for="username">ユーザーネーム</label>
    <input
      class="form-control"
      type="text"
      id="username"
      name="username"
      required
    />
    <div class="valid-feedback">OK!</div>
  </div>
  <div class="mb-3">
    <label class="form-label" for="email">メールアドレス</label>
    <input class="form-control" type="email" id="email" name="email" required />
    <div class="valid-feedback">OK!</div>
  </div>
  <div class="mb-3">
    <label class="form-label" for="password">パスワード</label>
    <input
      class="form-control"
      type="password"
      id="password"
      name="password"
      required
    />
    <div class="valid-feedback">OK!</div>
  </div>
  <button class="btn btn-success">登録する</button>
</form>
