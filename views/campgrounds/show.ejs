<% layout('layouts/boilerplate') -%>
<h1 class="mb-3"><%= campground.title %></h1>
<h2 class="mb-3"><%= campground.location %></h2>
<h3 class="mb-3"><%= campground.price %>円</h3>
<img
  src="<%= campground.image %>"
  alt="<%= campground.title  %>のイメージ画像"
  width="800"
  height="500"
  loading="lazy"
/>
<p><%= campground.description %></p>
<p>
  <a href="/campgrounds/<%= campground.id  %>/edit">編集する</a>
</p>

<form action="/campgrounds/<%= campground.id  %>?_method=DELETE" method="post">
  <button>削除する</button>
</form>

<footer>
  <a href="/campgrounds">一覧に戻る</a>
</footer>
