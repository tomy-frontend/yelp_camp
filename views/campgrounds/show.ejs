<% layout('layouts/boilerplate') -%>
<link rel="stylesheet" href="/styles/stars.css" />

<div class="row">
  <!-- left -->
  <div class="col-6">
    <div id="campgroundCarousel" class="carousel slide">
      <div class="carousel-inner">
        <% campground.images.forEach((img,i)=> { %> <div class="carousel-item
        <%= i === 0 ? 'active': "" %>">
        <img
          class="ratio ratio-4x3 d-block w-100"
          src="<%= img.url %>"
          alt="<%= campground.title %>のイメージ画像"
          width="400"
          height="400"
          loading="lazy"
        />
      </div>
      <% }) %>
    </div>

    <!-- 画像が1枚以上の時だけprev,nextボタンを表示する -->
    <% if(campground.images.length > 1) { %>
    <button
      class="carousel-control-prev"
      type="button"
      data-bs-target="#campgroundCarousel"
      data-bs-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button
      class="carousel-control-next"
      type="button"
      data-bs-target="#campgroundCarousel"
      data-bs-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
    <% } %>
  </div>

  <div class="card mb-3">
    <div class="card-body">
      <h3 class="card-title"><%= campground.title %></h3>
      <p class="card-text"><%= campground.description %></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item text-muted"><%= campground.location %></li>
      <li class="list-group-item">
        登録者: <%= campground.author.username %> さん
      </li>
      <li class="list-group-item text-muted">￥<%= campground.price %>/泊</li>
    </ul>

    <!-- ログインしているユーザー = 作成者でないと編集・削除ボタンは表示しない -->
    <% if(currentUser && campground.author.equals(currentUser._id)) { %>
    <div class="card-body">
      <a href="/campgrounds/<%= campground.id  %>/edit" class="btn btn-info"
        >編集する</a
      >
      <form
        class="d-inline"
        action="/campgrounds/<%= campground.id  %>?_method=DELETE"
        method="post"
      >
        <button class="btn btn-danger">削除する</button>
      </form>
    </div>
    <% } %>

    <div class="card-footer text-muted">2 days ago</div>
  </div>
  </div>

  <!-- right -->
  <div class="col-6">
    <div id="map" style=" width: 600px; height: 300px; "></div>
    <% if(currentUser) { %>
    <!-- review投稿 -->
    <h2>レビュー</h2>
    <form
      action="/campgrounds/<%= campground._id %>/reviews"
      method="post"
      class="mb-3 validated-form"
      novalidate
    >
      <div>
        <fieldset class="starability-basic">
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="1">評価1</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="2">評価2</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
            checked
          />
          <label for="first-rate3" title="3">評価3</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="4">評価4</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="5">評価5</label>
        </fieldset>
      </div>

      <div class="mb-3">
        <label class="form-label" for="body">コメント</label>
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          cols="30"
          rows="3"
          required
        ></textarea>
        <div class="valid-feedback">OK!</div>
      </div>
      <button class="btn btn-success">投稿する</button>
    </form>
    <% } %>

    <!-- review表示 -->
    <% for(let review of campground.reviews) { %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">
          <%= review.author ? review.author.username : '不明なユーザー' %>
        </h5>
        <p class="starability-result" data-rating="<%= review.rating %>">
          評価: <%= review.rating %>
        </p>
        <p class="card-text">コメント: <%= review.body %></p>

        <!-- ログインユーザー = 登録ユーザーの場合のみ削除ボタン表示 -->
        <% if(currentUser && review.author.equals(currentUser._id)) { %>
        <!-- 削除ボタン -->
        <form
          action="/campgrounds/<%= campground._id%>/reviews/<%= review._id %>?_method=DELETE"
          method="post"
        >
          <button class="btn btn-sm btn-danger">削除する</button>
        </form>
        <% } %>
      </div>
    </div>
    <% } %>
  </div>
</div>
<script>
  const mapToken = "<%= process.env.MAPBOX_TOKEN %>"
  const campground = <%- JSON.stringify(campground) %>
</script>
<script  src="/javascripts/showPageMap.js"></script>